<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.varun.controller.InstallmentDetailsController">
    <children>
        <VBox prefHeight="187.0" prefWidth="590.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
         <children>
            <TableView fx:id="installmentTableView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="installmentIdCol" prefWidth="124.0" text="installment id" />
                <TableColumn fx:id="amountCol" prefWidth="404.0" text="Amount" />
                  <TableColumn fx:id="alreadPaidCol" prefWidth="75.0" text="Already Paid" />
                  <TableColumn fx:id="dueDateCol" prefWidth="75.0" text="Due Date" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="addInstallmentButton" contentDisplay="CENTER" mnemonicParsing="false" text="Add Installment" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
        </VBox>
    </children>
</AnchorPane>
